<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                {{item.name}} <small>Downloads {{#if item.locked}}<i class="fa fa-fw fa-lock"></i>{{/if}}</small>
            </h1>
            <ol class="breadcrumb">
                <li>
                    <i class="fa fa-dashboard"></i> Portal
                </li>
                <li class="active">
                    {{item.name}} {{#if item.locked}}<i class="fa fa-fw fa-lock"></i>{{/if}}
                </li>
            </ol>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            {{#each item.flavors as |flavor flavorId|}}
                <a href="https://dl.nprail.me/{{flavorId}}/{{flavorId}}-{{flavor.url}}.jar" class="btn btn-default">Download {{flavor.name}}</a>
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Version</th>
                        <th>Download</th>
                        <th>Download URL</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each contents as |content contentId|}}
                    <tr>
                        <td>{{content.version}}</td>
                        <td><a href="https://dl.nprail.me/{{content.key}}">{{content.version}}</a></td>
                        <td onclick="copyToClipboard('https://dl.nprail.me/{{content.key}}')"><code>https://dl.nprail.me/{{content.key}}</code></td>
                        <td>{{content.date}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>
